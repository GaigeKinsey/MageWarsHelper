<Page
    x:Class="MageWarsHelper.Views.PlayerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MageWarsHelper.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="AliceBlue">

    <StackPanel x:Name="mainStackPannel"
                Orientation="Vertical">

        <StackPanel x:Name="subStackPannel" 
                    Orientation="Horizontal">
            
            <StackPanel x:Name="playerInfo"
                        Orientation="Vertical"
                        Background="BlanchedAlmond"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="10"
                        Margin="10">
                
                <TextBlock x:Name="PlayerName"
                           Margin="10,10"
                           FontSize="24"
                           Text="a name"/>
                
                <TextBlock x:Name="playerClass"
                           Margin="10,10"
                           FontSize="24"
                           Text="a class"/>
                
                <TextBlock x:Name="subClass"
                           Margin="10"
                           FontSize="24"
                           Text="a subclass"/>

            </StackPanel>
            
            <StackPanel x:Name="turn"
                        Orientation="Vertical"
                        Background="BlanchedAlmond"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="10"
                        Margin="10,10">

                <StackPanel x:Name="initiativeStack"
                            Orientation="Horizontal">

                    <CheckBox x:Name="initativeCheckBox"
                              FontSize="24"
                              Margin="10,1"
                              VerticalContentAlignment="Center"
                              Content="Initiative"/>
                </StackPanel>
                <StackPanel x:Name="actionStack"
                            Orientation="Horizontal">

                    <CheckBox x:Name="actionCheckBox"
                              FontSize="24"
                              Margin="10,1"
                              VerticalContentAlignment="Center"
                              Content="Action"/>
                </StackPanel>
                <StackPanel x:Name="quickCastStack"
                            Orientation="Horizontal">

                    <CheckBox x:Name="quickCastCheckBox"
                              FontSize="24"
                              Margin="10,1"
                              VerticalContentAlignment="Center"
                              Content="QuickCast"/>
                </StackPanel>
            </StackPanel>
            
            <StackPanel x:Name="mainChanelStack"
                        Orientation="Vertical"
                        Background="BlanchedAlmond"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="10"
                        Margin="10">
                
                <TextBlock x:Name="channeling"
                           Margin="10,10"
                           FontSize="24"
                           Text="Channeling"/>
                
                <TextBlock x:Name="currentChanneling"
                           Margin="10,10"
                           FontSize="24"
                           Text="{Binding Path=Mage.Channeling, Mode=OneWay}"/>
                
                <TextBox x:Name="adjustChanel"
                         Margin="10,10"
                         FontSize="24"
                         BorderBrush="Gray"
                         PlaceholderText="0"
                         BeforeTextChanging="TextBoxNumber_BeforeTextChanging"/>
                
                <StackPanel x:Name="channelButtons"
                            Orientation="Horizontal">
                    
                    <Button x:Name="channelAdd"
                            Margin="10,10"
                            Width="50"
                            Height="50"
                            FontSize="24"
                            Content="+"
                            Tapped="channelAdd_Tapped"/>
                    
                    <Button x:Name="channelSubtract"
                            Margin="10,10"
                            Width="50"
                            Height="50"
                            FontSize="24"
                            Content="-"
                            Tapped="channelSubtract_Tapped"/>

                </StackPanel>
            </StackPanel>
            
            <StackPanel x:Name="mainManaStack"
                        Orientation="Vertical"
                        Background="BlanchedAlmond"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="10"
                        Margin="10">
                
                <TextBlock x:Name="mana"
                           Margin="10,10"
                           FontSize="24"
                           Text="Mana"/>
                
                <TextBlock x:Name="currentMana"
                           Margin="10,10"
                           FontSize="24"
                           Text="{Binding Path=Mage.Mana, Mode=OneWay}"/>
                
                <TextBox x:Name="adjustMana"
                         Margin="10,10"
                         FontSize="24"
                         BorderBrush="Gray"
                         PlaceholderText="0"
                         BeforeTextChanging="TextBoxNumber_BeforeTextChanging"/>
                
                <StackPanel x:Name="manaButtons"
                            Orientation="Horizontal">
                    
                    <Button x:Name="manaAdd"
                            Margin="10,10"
                            Width="50"
                            Height="50"
                            FontSize="24"
                            Content="+"
                            Tapped="manaAdd_Tapped"/>
                    
                    <Button x:Name="manaSubtract"
                            Margin="10,10"
                            Width="50"
                            Height="50"
                            FontSize="24"
                            Content="-"
                            Tapped="manaSubtract_Tapped"/>

                </StackPanel>
            </StackPanel>
            
            <StackPanel x:Name="mainLifeStack"
                        Orientation="Vertical"
                        Background="BlanchedAlmond"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="10"
                        Margin="10">
                
                <TextBlock x:Name="LifeText"
                           Margin="10,10"
                           FontSize="24"
                           Text="Life"/>
                
                <TextBlock x:Name="currentLife"
                           Margin="10,10"
                           FontSize="24"
                           Text="{Binding Path=Mage.Life, Mode=OneWay}"/>
                
                <TextBox x:Name="adjustLife"
                         Margin="10,10"
                         FontSize="24"
                         BorderBrush="Gray"
                         InputScope="Number"
                         PlaceholderText="0"
                         BeforeTextChanging="TextBoxNumber_BeforeTextChanging"/>
                
                <StackPanel x:Name="lifeButtons"
                            Orientation="Horizontal">
                    
                    <Button x:Name="lifeAdd"
                            Margin="10,10"
                            Width="50"
                            Height="50"
                            FontSize="24"
                            Content="+"
                            Tapped="lifeAdd_Tapped"/>
                    
                    <Button x:Name="lifeSubtract"
                            Margin="10,10"
                            Width="50"
                            Height="50"
                            FontSize="24"
                            Content="-"
                            Tapped="lifeSubtract_Tapped"/>

                </StackPanel>
            </StackPanel>
            
            <StackPanel x:Name="mainDamageStack"
                        Orientation="Vertical"
                        Background="BlanchedAlmond"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="10"
                        Margin="10">
                
                <TextBlock x:Name="DamageText"
                           Margin="10,10"
                           FontSize="24"
                           Text="Damage"/>
                
                <TextBlock x:Name="currentDamage"
                           Margin="10,10"
                           FontSize="24"
                           Text="{Binding Path=Mage.Damage, Mode=OneWay}"/>
                
                <TextBox x:Name="adjustDamage"
                         Margin="10,10"
                         FontSize="24"
                         BorderBrush="Gray"
                         InputScope="Number"
                         PlaceholderText="0"
                         BeforeTextChanging="TextBoxNumber_BeforeTextChanging"/>
                
                <StackPanel x:Name="DamageButtons"
                            Orientation="Horizontal">
                    
                    <Button x:Name="DamageAdd"
                            Margin="10,10"
                            Width="50"
                            Height="50"
                            FontSize="24"
                            Content="+"
                            Tapped="DamageAdd_Tapped"/>
                    
                    <Button x:Name="DamageSubtract"
                            Margin="10,10"
                            Width="50"
                            Height="50"
                            FontSize="24"
                            Content="-"
                            Tapped="DamageSubtract_Tapped"/>

                </StackPanel>
            </StackPanel>
            
            <StackPanel x:Name="mainArmorStack"
                        Orientation="Vertical"
                        Background="BlanchedAlmond"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="10"
                        Margin="10">
                
                <TextBlock x:Name="ArmorText"
                           Margin="10,10"
                           FontSize="24"
                           Text="Armor"/>
                
                <TextBlock x:Name="currentArmor"
                           Margin="10,10"
                           FontSize="24"
                           Text="{Binding Path=Mage.Armor, Mode=OneWay}"/>
                
                <TextBox x:Name="adjustArmor"
                         Margin="10,10"
                         FontSize="24"
                         BorderBrush="Gray"
                         InputScope="Number"
                         PlaceholderText="0"
                         BeforeTextChanging="TextBoxNumber_BeforeTextChanging"/>
                
                <StackPanel x:Name="ArmorButtons"
                            Orientation="Horizontal">
                    
                    <Button x:Name="ArmorAdd"
                            Margin="10,10"
                            Width="50"
                            Height="50"
                            FontSize="24"
                            Content="+"
                            Tapped="ArmorAdd_Tapped"/>
                    
                    <Button x:Name="ArmorSubtract"
                            Margin="10,10"
                            Width="50"
                            Height="50"
                            FontSize="24"
                            Content="-"
                            Tapped="ArmorSubtract_Tapped"/>

                </StackPanel>
            </StackPanel>

        </StackPanel>
    </StackPanel>
</Page>
