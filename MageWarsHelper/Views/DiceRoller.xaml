<Page
    x:Class="MageWarsHelper.Views.DiceRoller"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MageWarsHelper.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel
        VerticalAlignment="Center">
        <TextBlock x:Name="numberRolled"
                   FontSize="100"
                   Text="_"
                   HorizontalAlignment="Center"/>
        
        <StackPanel x:Name="rollerStack"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">

            <TextBox x:Name="numberOfSides"
                 Margin="10,10"
                 Width="75"
                 Height="50"
                 FontSize="24"
                 BorderBrush="Gray"
                 PlaceholderText="6"
                 BeforeTextChanging="TextBoxNumber_BeforeTextChanging"/>
            
            <Button x:Name="rollButton"
                    Content="Roll"
                    FontSize="24"
                    Padding="10,10"
                    Margin="10"
                    Tapped="rollButton_Tapped"/>

        </StackPanel>
        
    </StackPanel>
</Page>
